<UserControl x:Class="epicture.Picture"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:epicture"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="PictureGrid" Width="300" Height="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="PictureTitle" Grid.Row="0" TextTrimming="WordEllipsis" TextWrapping="Wrap"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#f5f6fa"/>
        <Button Name="PictureFavoriteButton" Grid.Row="2" Content="Favorite" Width="80" Height="23" Click="PictureFavoriteButton_Click"/>
    </Grid>
</UserControl>
