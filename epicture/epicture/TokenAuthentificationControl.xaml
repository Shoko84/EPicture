<UserControl x:Class="epicture.TokenAuthentificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:epicture"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Content="Please enter your public key :" Foreground="#f5f6fa" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Name="PublicKeyTextBox" Grid.Row="2" VerticalAlignment="Center" Width="250"/>
        <Button Name="ConfirmButton" Grid.Row="3" Content="Confirm" Width="90" Height="25" VerticalAlignment="Bottom" Click="ConfirmButton_Click"/>
    </Grid>
</UserControl>
